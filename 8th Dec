test("Demo", async function({ page })
{
    await page.goto("http://127.0.0.1:5500/index.html") 
    
    // > ==> direct child inside the parent
    // await page.locator(".card > input").fill("Raju")

    // space ==> all the level of the child
    await page.locator(".card  input").nth(0).fill("Raju")

    await page.waitForTimeout(10000)
})


