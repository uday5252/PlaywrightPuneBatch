create database customer_order_db;
use customer_order_db;

CREATE TABLE customers (
    id INT PRIMARY KEY,
    name VARCHAR(50),
    age INT,
    p_id INT,
		foreign key(p_id) references orders(product_id)
);

CREATE TABLE orders (
    product_id INT PRIMARY KEY,
    product_name VARCHAR(50)
);

INSERT INTO customers (id, name, age, p_id) VALUES
(1, 'Raju', 30, 200),
(2, 'Ramu', 35, 100),
(3, 'Rani', 30, 100),
(4, 'Sam', 40, 300);

INSERT INTO orders (product_id, product_name) VALUES
(100, 'Shoes'),
(200, 'Laptop'),
(300, 'Makeup Kit'),
(400, 'Water Bottle');


select * from customers;
select * from orders;



INSERT INTO customers (id, name, age, p_id) VALUES
(5, 'Tim', 33, 800);

-- read the data
-- customername, productname

select name, product_name from customers
inner join orders on customers.p_id = orders.product_id;

