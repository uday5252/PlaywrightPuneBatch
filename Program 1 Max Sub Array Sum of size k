const data = [ 1, 2, -3, -2, 1 ]
const k = 3

let windowLeft = 0
let windowSum = 0 // 7
let maxSum = 0 //  7

for(let windowRight = 0; 
    windowRight < data.length; 
    windowRight++)
{
    windowSum = windowSum + data[windowRight]

    if(windowRight >= k - 1)
    {
        maxSum = Math.max(maxSum, windowSum)
        windowLeft++
        windowSum = windowSum - data[windowLeft - 1]
    }

}

 console.log(maxSum)

