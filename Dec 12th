test("Handling windows!", async function({ page })
{
  
    await page.goto("http://127.0.0.1:5500/first.html")

   const [ childWindow ] = await Promise.all([page.waitForEvent("popup"), page.getByText("Click Here!").click()])

    await childWindow.locator("#name").fill("Raju")

    await page.waitForTimeout(5000) 
})

===============================================================================


test("Uploading single file!", async function({ page })
{
    await page.goto("https://davidwalsh.name/demo/multiple-file-upload.php")
    
    await page.locator("#filesToUpload").setInputFiles("C:\\Users\\udayk\\Downloads\\11th Dec.pdf")
    
    
    expect(page.locator("//ul[@id='fileList']/li")).toHaveText("12th Dec.pdf")

    await page.waitForTimeout(5000) 
})


test.only("Uploading multiple files!", async function({ page })
{
    await page.goto("https://davidwalsh.name/demo/multiple-file-upload.php")
    
    await page.locator("#filesToUpload").setInputFiles
    (["C:\\Users\\udayk\\Downloads\\11th Dec.pdf", "C:\\Users\\udayk\\Downloads\\8th Dec.pdf"])
    
    
    expect(page.locator("//ul[@id='fileList']/li").nth(0)).toHaveText("11th Dec.pdf")
    expect(page.locator("//ul[@id='fileList']/li").nth(1)).toHaveText("8th Dec.pdf")

    await page.waitForTimeout(5000) 
})









